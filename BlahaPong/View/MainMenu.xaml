    </Window.Resources>
    <Window.Background>
        <ImageBrush x:Name="menu_background" ImageSource="../Resources/images/heroes.png" Stretch="Uniform"></ImageBrush>
    </Window.Background>
    <StackPanel HorizontalAlignment="Center" Width="352" VerticalAlignment="Center">
        <Button Style="{DynamicResource oneplayer}" Width="208" Height="60" Click="OnePlayer" FontSize="40"  Visibility="Visible" BorderBrush="{x:Null}" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="../Resources/menu/oneplayer.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button Style="{DynamicResource twoplayer}" Width="210" Height="55" Click="TwoPlayer" BorderBrush="{x:Null}" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="../Resources/menu/twoplayer.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button Style="{DynamicResource credits}" Width="206" Height="51" Margin="10" Click="Credits" BorderBrush="{x:Null}" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="../Resources/menu/credits.png" Stretch="UniformToFill"></ImageBrush>
            </Button.Background>
        </Button>
        <Button Style="{DynamicResource exit}" Width="204" Height="69" Click="Exit" BorderBrush="{x:Null}" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="../Resources/menu/exit.png" Stretch="Uniform"/>
